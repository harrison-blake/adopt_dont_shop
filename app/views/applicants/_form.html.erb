<%= form_with url: path, method: :method, local: true do |form| %>
  <h2>New Application Form</h2>
  <%= form.label :name %>
  <%= form.text_field :name %><br>
  <%= form.label :street %>
  <%= form.text_field :street %><br>
  <%= form.label :city %>
  <%= form.text_field :city %><br>
  <%= form.label :state %>
  <%= form.text_field :state %><br>
  <%= form.label :zip %>
  <%= form.text_field :zip %><br>
  <%= form.label :description %>
  <%= form.text_field :description %><br>
  <%= form.submit btn_txt %>
<% end %>
